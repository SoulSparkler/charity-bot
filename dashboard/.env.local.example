# Dashboard Environment Configuration
NEXT_PUBLIC_DASHBOARD_TITLE=Charity Bot Dashboard

# Database Configuration (can be same as backend)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=charity_bot
DB_USER=postgres
DB_PASSWORD=password

# Alternative: Use DATABASE_URL instead of individual DB params
# DATABASE_URL=postgresql://postgres:password@localhost:5432/charity_bot

# Dashboard Settings
DASHBOARD_PASSWORD=
# Optional: Set a password to protect dashboard access
# If not set, dashboard will be publicly accessible

DEMO_MODE=true
# Set to false to use real data from database

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
# URL of the backend worker API

# Theme Configuration
NEXT_PUBLIC_THEME=dark
# dark, light, or system

# Refresh Intervals (in seconds)
NEXT_PUBLIC_REFRESH_INTERVAL=30
# How often to refresh dashboard data

# Development
NEXT_PUBLIC_DEV_MODE=true
SHOW_DEBUG_INFO=false