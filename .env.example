# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=charity_bot
DB_USER=postgres
DB_PASSWORD=password

# Alternative: Use DATABASE_URL instead of individual DB params
# DATABASE_URL=postgresql://postgres:password@localhost:5432/charity_bot

# Database Mode Configuration
USE_MOCK_DB=true
# true = use in-memory mock database (development/testing)
# false = use PostgreSQL database (production)

# Kraken API Configuration
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Kraken API Mode Configuration
USE_MOCK_KRAKEN=true
# true = use mock Kraken data (development/testing)
# false = use real Kraken API data (production)

# Real Trading Safety Configuration
ALLOW_REAL_TRADING=false
# Set to true ONLY when ready for real trading with real money
# This will attempt to place real orders on Kraken
# IMPORTANT: Only enable this in production with proper risk controls

TRADE_CONFIRMATION_REQUIRED=true
# Set to true to require manual confirmation before each trade
# Recommended to keep this true for safety

# API Key Permissions (Kraken Console)
# Ensure your API key has these read-only permissions:
# - Query Funds
# - Query Open Orders
# - Query Closed Orders  
# - Query Trades History
# - Query Trading Data (for ticker data)
# DO NOT enable "Create & Modify Orders" unless ALLOW_REAL_TRADING=true

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# Worker Configuration
# Cron expressions (UTC timezone)
# Sentiment analysis every 15 minutes
SENTIMENT_CRON=*/15 * * * *
# Bots run every 5 minutes
BOTS_CRON=*/5 * * * *
# Daily maintenance at midnight UTC
MAINTENANCE_CRON=0 0 * * *
# Status checks every hour
STATUS_CRON=0 * * * *

# Risk Management
MAX_DAILY_LOSS_BOT_A=100
MAX_DAILY_LOSS_BOT_B=50
MAX_OPEN_POSITIONS_BOT_A=3
MAX_OPEN_POSITIONS_BOT_B=2

# Bot Configuration
BOT_A_INITIAL_BALANCE=230
BOT_A_CYCLE_TARGET=200
BOT_A_SEED_AMOUNT=30
BOT_B_MIN_MCS=0.5
BOT_A_MIN_MCS=0.4
BOT_A_TRADE_AMOUNT_USD=25
# Alternative: TRADE_AMOUNT_USD=25 (used if BOT_A_TRADE_AMOUNT_USD not set)

# Donation Configuration
MONTHLY_DONATION_PERCENTAGE=0.5
# Bot B donates 50% of monthly profits

# External API Configuration
FEAR_GREED_API_URL=https://api.alternative.me/fng/
SENTIMENT_UPDATE_INTERVAL=900000
# 15 minutes in milliseconds

# Rate Limiting
KRAKEN_RATE_LIMIT_DELAY=1000
# 1 second delay between Kraken API calls

# Development/Testing
ENABLE_DEBUG_ENDPOINTS=true
# Set to false in production

# Monitoring
HEALTH_CHECK_INTERVAL=30000
# 30 seconds
STATUS_CHECK_INTERVAL=3600000
# 1 hour

# File Paths
LOG_DIR=logs
DATA_DIR=data

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
# 24 hours in milliseconds

# Security
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Email Notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# Webhook URLs (optional)
DISCORD_WEBHOOK=
SLACK_WEBHOOK=