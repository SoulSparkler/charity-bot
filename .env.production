# Production Environment
NODE_ENV=production
PORT=3000

# Database Configuration (Railway PostgreSQL)
USE_MOCK_DB=false
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DATABASE_URL=${DATABASE_URL}

# Kraken API Configuration (use environment variables for security)
KRAKEN_API_KEY=${KRAKEN_API_KEY}
KRAKEN_API_SECRET=${KRAKEN_API_SECRET}

# Production Safety Configuration
USE_MOCK_KRAKEN=false
ALLOW_REAL_TRADING=false
TRADE_CONFIRMATION_REQUIRED=true

# Risk Management (EUR values for safety)
MAX_POSITION_SIZE_EUR=20
MAX_DAILY_LOSS_BOT_A_EUR=100
MAX_DAILY_LOSS_BOT_B_EUR=50
MAX_OPEN_POSITIONS_BOT_A=3
MAX_OPEN_POSITIONS_BOT_B=2

# Emergency Stop (set to true to stop all trading)
EMERGENCY_STOP=false

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Dashboard Configuration
DEMO_MODE=false
# Admin API Key for protected endpoints
ADMIN_API_KEY=charity-bot-admin-2024-secure-key
NEXT_PUBLIC_API_URL=${BACKEND_URL}
