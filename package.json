{
  "name": "charity-bot-v1",
  "version": "1.0.0",
  "description": "Charity trading bot with sentiment analysis and dual-engine system",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && node -e \"require('fs').mkdirSync('dist/db', {recursive: true})\" && node -e \"require('fs').copyFileSync('src/db/schema.sql', 'dist/db/schema.sql')\"",
    "dev": "concurrently \"npm run dev:worker\" \"npm run dev:server\"",
    "dev:server": "ts-node src/server.ts",
    "dev:worker": "ts-node src/worker.ts",
    "start": "node dist/server.js",
    "start:server": "node dist/server.js",
    "watch": "ts-node --watch src/worker.ts",
    "watch:server": "ts-node --watch src/server.ts",
    "test": "echo \"Use USE_MOCK_KRAKEN=true for testing without real money\" && exit 0",
    "test:kraken": "npm run build && node test-kraken-api.js",
    "lint": "eslint src --ext .ts",
    "db:migrate": "psql $DATABASE_URL -f src/db/schema.sql"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "pg": "^8.11.3",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "trading",
    "bot",
    "charity",
    "kraken",
    "sentiment",
    "typescript",
    "nodejs"
  ],
  "author": "Charity Bot Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}